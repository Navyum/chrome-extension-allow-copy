{
  "name": "chrome-extension-allow-copy",
  "version": "1.0.0",
  "description": "Chrome扩展 - 允许复制网页内容",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode=production",
    "build:chrome": "webpack --mode=production --env browser=chrome",
    "build:firefox": "webpack --mode=production --env browser=firefox",
    "build:edge": "webpack --mode=production --env browser=edge",
    "build:all": "npm run clean && npm run build:chrome && npm run build:firefox && npm run build:edge",
    "dev": "webpack --mode=development --watch",
    "dev:chrome": "webpack --mode=development --watch --env browser=chrome",
    "dev:firefox": "webpack --mode=development --watch --env browser=firefox",
    "dev:edge": "webpack --mode=development --watch --env browser=edge",
    "pack:chrome": "mkdir -pv build && cd dist/chrome && zip -r ../../build/allow-copy-chrome.zip *",
    "pack:firefox": "mkdir -pv build && cd dist/firefox && zip -r ../../build/allow-copy-firefox.xpi *",
    "pack:edge": "mkdir -pv build && cd dist/edge && zip -r ../../build/allow-copy-edge.zip *",
    "pack:all": "npm run pack:chrome && npm run pack:firefox && npm run pack:edge",
    "clean": "rimraf dist build",
    "prebuild": "npm run clean",
    "lint": "echo 'Linting not configured yet'",
    "test": "echo 'Tests not configured yet'"
  },
  "keywords": [
    "chrome-extension",
    "firefox-extension",
    "edge-extension",
    "copy",
    "webpack",
    "babel"
  ],
  "author": "haijun_yang",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {}
}
