{
    "manifest_version": 2,
    "name": "__MSG_extName__",
    "version": "1.0",
    "description": "__MSG_extDescription__",
    "applications": {
        "gecko": {
            "id": "allow-copy-navyum@gmail.com",
            "strict_min_version": "78.0"
        }
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "js": ["i18n.js", "content.js"],
        "matches": ["<all_urls>"]
    }],
    "default_locale": "en",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        "inject.js",
        "i18n.js"
    ]
}
